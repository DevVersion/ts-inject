    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["reflect-metadata"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}